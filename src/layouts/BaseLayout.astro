---
import "../styles/global.css";
import pageTransitionsUrl from "../scripts/pageTransitions.ts?url";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Abdelrahman Elsayed | Software Engineer",
  description = "Portfolio site for Abdelrahman Elsayed showcasing experience, projects, and certificates.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Dosis:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    {Astro.head}
  </head>
  <body style="opacity:0; transition: opacity 300ms ease">
    <script type="module" src={pageTransitionsUrl}></script>
    <slot />
  </body>
</html>
