---

<BaseLayout title="Abdelrahman Elsayed | About">
  <div class="App">
    <NavBar />
    <AOSInit />
    <div class="content-wrapper">
      <div class="upper-view">
        <div class="main-about">
          <img
            alt="avatar"
            src="https://res.cloudinary.com/dnkxmjpxy/image/upload/v1623278819/9585214F-075C-42E0-91FB-6C1C9038EDBE_hiidgp.png"
            class="image"
          />
          <div class="about-text">
            <p class="header-text">iOS Mobile Developer</p>
            <p class="second-header-text">
              <strong>
                Based in Chicago,
                <br /> I develop software and stuff like that.
              </strong>
            </p>
            <p class="about-paragraph">
              Constantly learning and exploring new skills. Passionate about science, creativity, and new technologies,
              what problems they can solve, and how I can use them to build better and scalable products.
            </p>
          </div>
        </div>
        <a href="#Experience" class="downArrow bounce" aria-label="Scroll to experience">
          <div data-lottie="mouse-pointer" style="height: 90px; width: 90px"></div>
        </a>
      </div>

      <div id="Experience"></div>
      <div data-aos="fade-left">
        <h2 style="margin-top: 5rem; color: #1d3557">Experience</h2>
        <div class="experience-container">
          {experiences.map((exp, index) => (
            <>
              <Experience {...exp} />
              {index !== experiences.length - 1 && <hr style="border-top: 3px double #8c8b8b" />}
            </>
          ))}
        </div>
      </div>

      <div data-aos="fade-right">
        <h2 style="margin-top: 7rem; color: #1d3557">Education</h2>
        <div class="activities-container">
          {education.map((item, index) => (
            <>
              <Experience {...item} />
              {index !== education.length - 1 && <hr style="border-top: 3px double #8c8b8b" />}
            </>
          ))}
        </div>
      </div>

      <div data-aos="fade-right">
        <h2 style="margin-top: 7rem; color: #1d3557">Activities</h2>
        <div class="experience-container">
          {activities.map((item, index) => (
            <>
              <Experience {...item} />
              {index !== activities.length - 1 && <hr style="border-top: 3px double #8c8b8b" />}
            </>
          ))}
        </div>
      </div>

      <div style="text-align: center; margin-bottom: 6rem">
        <div data-aos="fade-up">
          <div class="cards__container skills">
            <Skills />
          </div>
        </div>
        <button
          class="bounce button-up"
          type="button"
          onclick="window.scrollTo({ top: 0, behavior: 'smooth' });"
        >
          <i class="fas fa-sort-up fa-5x"></i>
        </button>
      </div>
    </div>
    <Footer />
  </div>
</BaseLayout>
<script type="module">
  import lottie from "lottie-web";
  import mouseAnimation from "../assets/LottieMouse.json";

  const mouse = document.querySelector("[data-lottie='mouse-pointer']");
  if (mouse) {
    requestAnimationFrame(() => {
      lottie.loadAnimation({
        container: mouse,
        renderer: "svg",
        loop: true,
        autoplay: true,
        animationData: mouseAnimation,
      });
    });
  }
</script>
